{
    "manifest_version": 2,
    "name": "Quick Pic Save",
    "version": "1.0",

    "description": "Quickly save images from the web using a popup Save button.",
    "homepage_url": "http://glowpuff.com",

    "applications":
    {
        "gecko":
        {
            "id": "quicksave@glowpuff.com"
        }
    },

    "icons":
    {
        "48": "icons/quicksave-48.png"
    },

    "content_scripts": [
    {
        "matches": [ "<all_urls>" ],
        "js": [
            "content_scripts/jquery-3.3.1.min.js",
            "content_scripts/quicksave.js"
        ],
        "css": [
            "content_scripts/quicksave.css"
        ]
    } ],

    "background":
    {
        "scripts": [ "content_scripts/background.js" ]
    },

    "permissions": [
        "downloads",
        "storage"
    ],

    "browser_action":
    {
        "browser_style": false,
        "default_icon": "icons/download-36.png",
        "default_title": "QuickSave",
        "default_popup": "popup/popup.html"
    },

    "options_ui":
    {
        "page": "options/options.html",
        "browser_style": true
    },

    "web_accessible_resources": [
        "icons/download-36.png"
    ]
}